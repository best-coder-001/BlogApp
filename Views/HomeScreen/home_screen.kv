<HomeScreenView>:
    md_bg_color: root.theme_cls.backgroundColor
    MDBoxLayout:
        size_hint_x: 1
        orientation: 'vertical'
        BlogAppBar:
            title: "Home"
            nav: nav_drawer
        MDBoxLayout:     
            MDScrollView:
                do_scroll_x: False
                size: self.parent.size
                MDBoxLayout:
                    id: cards_list
                    orientation: 'vertical'
                    adaptive_height: True
                    padding: '12dp'
                    spacing: '12dp'
    BlogAppNavDrawer:
        id: nav_drawer
