<HomeScreenView>:
    md_bg_color: root.theme_cls.backgroundColor
    MDNavigationLayout:
        MDScreenManager:
            id: home_screen_manager
            MDScreen:
                name: 'home'
                MDBoxLayout:
                    size_hint_x: 1
                    orientation: 'vertical'
                    MDTopAppBar:
                        type: "small"
                        MDTopAppBarLeadingButtonContainer:
                            MDActionTopAppBarButton:
                                icon: "menu"
                                size_hint: None, None
                                font_size: "48sp"
                                size: "48dp", "48dp"
                                on_release: 
                                    nav_drawer.set_state('toggle')
                        MDTopAppBarTitle:
                            text: "Home"
                    MDBoxLayout:     
                        MDScrollView:
                            do_scroll_x: False
                            size: self.parent.size
                            MDBoxLayout:
                                id: cards_list
                                orientation: 'vertical'
                                adaptive_height: True
                                padding: '12dp'
                                spacing: '12dp'
            MDScreen:
                name: 'posts'
            MDScreen:
                name: 'favorites'
            MDScreen:
                name: 'settings'
            
        MDNavigationDrawer:
            id: nav_drawer 
            radius: [0,4,4,0]
            MDNavigationDrawerMenu:
                spacing: '10dp'
                
                MDNavigationDrawerLabel:
                    text: "Menu"
                    font_style: 'Title'
                    role: 'large'

                MDNavigationDrawerItem:
                    MDNavigationDrawerItemLeadingIcon:
                        icon: "home-outline"
                    MDNavigationDrawerItemText:
                        text: "Home"

                MDNavigationDrawerItem:
                    MDNavigationDrawerItemLeadingIcon:
                        icon: "post-outline"
                    MDNavigationDrawerItemText:
                        text: "Your posts"
                    MDNavigationDrawerItemTrailingText:
                        text: "70"

                MDNavigationDrawerItem:
                    MDNavigationDrawerItemLeadingIcon:
                        icon: "heart-outline"
                    MDNavigationDrawerItemText:
                        text: "Favorites"
                    MDNavigationDrawerItemTrailingText:
                        text: "45"


                MDNavigationDrawerItem:
                    MDNavigationDrawerItemLeadingIcon:
                        icon: "cog-outline"
                    MDNavigationDrawerItemText:
                        text: "Settings"

                MDNavigationDrawerItem:
                    active_indicator_color: rgba(0,0,0,0)
                    on_release: 
                        app.change_screens('main screen')
                    MDNavigationDrawerItemLeadingIcon:
                        icon: "logout"
                    MDNavigationDrawerItemText:
                        text: "Exit"
