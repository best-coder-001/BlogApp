<BlogAppBar>:
    type: "small"
    MDTopAppBarLeadingButtonContainer:
        MDActionTopAppBarButton:
            icon: "menu"
            size_hint: None, None
            font_size: "48sp"
            size: "48dp", "48dp"
            on_release: 
                root.nav.set_state('toggle')
    MDTopAppBarTitle:
        text: root.title
    MDTopAppBarTrailingButtonContainer:
        MDActionTopAppBarButton:
            icon: "account-circle-outline"
            size_hint: None, None
            font_size: "48sp"
            size: "48dp", "48dp"
            on_release: 
                app.change_screens('profile screen')